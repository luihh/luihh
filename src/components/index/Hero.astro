---
import SocialPill from './SocialPill.astro';
import Widget from '../music/Widget.astro';

import GitHubIcon from '../icons/GitHub.astro';
import PayPalIcon from '../icons/PayPal.astro';
---

<div class="flex flex-col sm:flex-row gap-8">
  <div class="w-full sm:max-w-xl">
    <div class="flex items-center gap-4 mb-4">
      <img
        src="./luihh.webp"
        alt="Luihh"
        class="rounded-full shadow-lg size-16"
      />
      <h1 class="text-4xl font-bold leading-tight text-ctp-text sm:text-5xl">
        Hey, I'm Luihh!
      </h1>
    </div>
    <div class="mt-6 text-xl text-ctp-subtext1">
      <p>
        <strong class="text-ctp-yellow">JavaScript</strong> & <strong
          class="text-ctp-blue">TypeScript</strong
        > developer
      </p>
      <p>
        Proud <strong class="text-ctp-blue">Rei plush</strong>
        owner and <strong class="text-ctp-red">lover ❤️</strong>
      </p>
      <p>I make silly projects for fun</p>
    </div>

    <nav class="flex flex-wrap gap-4 mt-8">
      <SocialPill href="https://github.com/luihh/">
        <GitHubIcon />
        GitHub
      </SocialPill>

      <SocialPill href="https://luihh.is-a.dev/paypal">
        <PayPalIcon />
        PayPal
      </SocialPill>
    </nav>
  </div>

  <Widget server:defer />
</div>
