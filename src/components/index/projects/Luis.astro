---
import Button from '../../Button.astro';
---

<div class="flex flex-col md:flex-row items-center gap-8">
  <div class="w-full md:w-1/2">
    <img
      src="./luis.webp"
      alt="Luis bot"
      class="w-full max-w-2xs mx-auto rounded-lg shadow-lg rotate-2 order-2 md:order-1"
    />
  </div>

  <div class="w-full md:w-1/2 order-1 md:order-2">
    <h2 class="text-3xl font-bold text-ctp-text mb-4">Luis bot</h2>
    <p class="text-ctp-subtext1 text-lg text-pretty mb-6">
      Luis is a <strong class="text-ctp-yellow"
        >Geometry Dash Fishing Bot</strong
      > where you can fish for <strong class="text-ctp-red"
        >Extreme Demons</strong
      >, earn points based on difficulty, and spend them on fun <strong
        class="text-ctp-pink">minigames</strong
      >!
    </p>

    <div class="flex flex-wrap gap-4">
      <Button
        href="https://luihh.is-a.dev/luis"
        color="green"
        >Website</Button
      >
      <Button
        href="https://luihh.is-a.dev/invite"
        color="blue"
        >Invitation</Button
      >
      <Button
        href="https://luihh.is-a.dev/patreon"
        color="red"
        >Patreon</Button
      >
    </div>
  </div>
</div>
